{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"isolatedModules": true,
		"paths": {
			"#lib/*": ["./src/helpers/*"],
			 "@/*": ["./@types/*"],
		},
		"noImplicitReturns": false
	},
	"ts-node": {"files": true,},
	"include": ["src", "@types"]
}